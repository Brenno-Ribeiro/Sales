<?xml version="1.0" encoding="utf-8"?>
<Report xmlns="http://schemas.microsoft.com/sqlserver/reporting/2008/01/reportdefinition"
        xmlns:rd="http://schemas.microsoft.com/SQLServer/reporting/reportdesigner">
  <DataSources>
    <DataSource Name="DataSource1">
      <ConnectionProperties>
        <DataProvider>System.Data.DataSet</DataProvider>
        <ConnectString />
      </ConnectionProperties>
      <rd:DataSourceID>00000000-0000-0000-0000-000000000000</rd:DataSourceID>
    </DataSource>
  </DataSources>

  <DataSets>
    <DataSet Name="DataSet1">
      <Fields>
        <Field Name="id"><DataField>id</DataField><rd:TypeName>System.Int32</rd:TypeName></Field>
        <Field Name="customer"><DataField>customer</DataField><rd:TypeName>System.String</rd:TypeName></Field>
        <Field Name="total_spent"><DataField>total_spent</DataField><rd:TypeName>System.Decimal</rd:TypeName></Field>
      </Fields>
      <Query>
        <DataSourceName>DataSource1</DataSourceName>
        <CommandText />
      </Query>
    </DataSet>
  </DataSets>

  <Body>
    <ReportItems>
      <Tablix Name="Tablix1">
        <TablixBody>
          <TablixColumns>
            <TablixColumn><Width>0.5in</Width></TablixColumn>
            <TablixColumn><Width>3in</Width></TablixColumn>
            <TablixColumn><Width>1.5in</Width></TablixColumn>
          </TablixColumns>
          <TablixRows>
            <!-- Header -->
            <TablixRow>
              <Height>0.25in</Height>
              <TablixCells>
                <TablixCell>
                  <CellContents>
                    <Textbox Name="HeaderID">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <FontWeight>Bold</FontWeight>
                        <BackgroundColor>#D9EDF7</BackgroundColor>
                        <Border>
                          <Style>Solid</Style>
                          <Color>Black</Color>
                        </Border>
                        <TextAlign>Center</TextAlign>
                      </Style>
                      <Paragraphs>
                        <Paragraph><TextRuns><TextRun><Value>ID</Value></TextRun></TextRuns></Paragraph>
                      </Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>
                <TablixCell>
                  <CellContents>
                    <Textbox Name="HeaderCustomer">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <FontWeight>Bold</FontWeight>
                        <BackgroundColor>#D9EDF7</BackgroundColor>
                        <Border>
                          <Style>Solid</Style>
                          <Color>Black</Color>
                        </Border>
                        <TextAlign>Center</TextAlign>
                      </Style>
                      <Paragraphs>
                        <Paragraph><TextRuns><TextRun><Value>Cliente</Value></TextRun></TextRuns></Paragraph>
                      </Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>
                <TablixCell>
                  <CellContents>
                    <Textbox Name="HeaderTotal">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <FontWeight>Bold</FontWeight>
                        <BackgroundColor>#D9EDF7</BackgroundColor>
                        <Border>
                          <Style>Solid</Style>
                          <Color>Black</Color>
                        </Border>
                        <TextAlign>Center</TextAlign>
                      </Style>
                      <Paragraphs>
                        <Paragraph><TextRuns><TextRun><Value>Total Gasto</Value></TextRun></TextRuns></Paragraph>
                      </Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>
              </TablixCells>
            </TablixRow>

            <!-- Data -->
            <TablixRow>
              <Height>0.2in</Height>
              <TablixCells>
                <TablixCell>
                  <CellContents>
                    <Textbox Name="IDValue">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <Border><Style>Solid</Style><Color>Black</Color></Border>
                        <BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor>
                        <TextAlign>Center</TextAlign>
                      </Style>
                      <Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!id.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>

                <TablixCell>
                  <CellContents>
                    <Textbox Name="CustomerValue">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <Border><Style>Solid</Style><Color>Black</Color></Border>
                        <BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor>
                        <TextAlign>Left</TextAlign>
                      </Style>
                      <Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!customer.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>

                <TablixCell>
                  <CellContents>
                    <Textbox Name="TotalSpentValue">
                      <CanGrow>true</CanGrow>
                      <Style>
                        <Border><Style>Solid</Style><Color>Black</Color></Border>
                        <BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor>
                        <TextAlign>Right</TextAlign>
                      </Style>
                      <Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!total_spent.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs>
                    </Textbox>
                  </CellContents>
                </TablixCell>
              </TablixCells>
            </TablixRow>
          </TablixRows>
        </TablixBody>

        <DataSetName>DataSet1</DataSetName>

        <TablixColumnHierarchy>
          <TablixMembers><TablixMember /><TablixMember /><TablixMember /></TablixMembers>
        </TablixColumnHierarchy>

        <TablixRowHierarchy>
          <TablixMembers>
            <TablixMember />
            <TablixMember>
              <Group Name="DetailGroup" />
            </TablixMember>
          </TablixMembers>
        </TablixRowHierarchy>

        <Top>0.2in</Top>
        <Left>0.2in</Left>
        <Height>0.45in</Height>
        <Width>5in</Width>
        <NoRowsMessage>Nenhum cliente encontrado.</NoRowsMessage>
      </Tablix>
    </ReportItems>
    <Height>2in</Height>
  </Body>

  <Width>6.5in</Width>
  <Page>
    <PageHeight>11in</PageHeight>
    <PageWidth>8.5in</PageWidth>
    <LeftMargin>0.5in</LeftMargin>
    <RightMargin>0.5in</RightMargin>
    <TopMargin>0.5in</TopMargin>
    <BottomMargin>0.5in</BottomMargin>
  </Page>
</Report>

<?xml version="1.0" encoding="utf-8"?>
<Report xmlns="http://schemas.microsoft.com/sqlserver/reporting/2008/01/reportdefinition"
        xmlns:rd="http://schemas.microsoft.com/SQLServer/reporting/reportdesigner">
  <DataSources>
    <DataSource Name="DataSource1">
      <ConnectionProperties>
        <DataProvider>System.Data.DataSet</DataProvider>
        <ConnectString />
      </ConnectionProperties>
      <rd:DataSourceID>00000000-0000-0000-0000-000000000000</rd:DataSourceID>
    </DataSource>
  </DataSources>

  <DataSets>
    <DataSet Name="DataSet1">
      <Fields>
        <Field Name="customer"><DataField>customer</DataField><rd:TypeName>System.String</rd:TypeName></Field>
        <Field Name="order_date"><DataField>order_date</DataField><rd:TypeName>System.DateTime</rd:TypeName></Field>
        <Field Name="product"><DataField>product</DataField><rd:TypeName>System.String</rd:TypeName></Field>
        <Field Name="quantity"><DataField>quantity</DataField><rd:TypeName>System.Int32</rd:TypeName></Field>
        <Field Name="total_item"><DataField>total_item</DataField><rd:TypeName>System.Decimal</rd:TypeName></Field>
      </Fields>
      <Query>
        <DataSourceName>DataSource1</DataSourceName>
        <CommandText />
      </Query>
    </DataSet>
  </DataSets>

  <Body>
    <ReportItems>
      <Tablix Name="Tablix1">
        <TablixBody>
          <TablixColumns>
            <TablixColumn><Width>2in</Width></TablixColumn>      
            <TablixColumn><Width>1.2in</Width></TablixColumn> <!-- Pedido menor -->
            <TablixColumn><Width>2in</Width></TablixColumn>      
            <TablixColumn><Width>1in</Width></TablixColumn>      
            <TablixColumn><Width>1.5in</Width></TablixColumn>    
          </TablixColumns>

          <TablixRows>
            <!-- Cabeçalho -->
            <TablixRow>
              <Height>0.25in</Height>
              <TablixCells>
                <TablixCell><CellContents><Textbox Name="HeaderCustomer"><CanGrow>true</CanGrow><Style><FontWeight>Bold</FontWeight><BackgroundColor>#D9EDF7</BackgroundColor><Border><Style>Solid</Style><Color>Black</Color></Border><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>Cliente</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="HeaderOrderDate"><CanGrow>true</CanGrow><Style><FontWeight>Bold</FontWeight><BackgroundColor>#D9EDF7</BackgroundColor><Border><Style>Solid</Style><Color>Black</Color></Border><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>Pedido</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="HeaderProduct"><CanGrow>true</CanGrow><Style><FontWeight>Bold</FontWeight><BackgroundColor>#D9EDF7</BackgroundColor><Border><Style>Solid</Style><Color>Black</Color></Border><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>Produto</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="HeaderQuantity"><CanGrow>true</CanGrow><Style><FontWeight>Bold</FontWeight><BackgroundColor>#D9EDF7</BackgroundColor><Border><Style>Solid</Style><Color>Black</Color></Border><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>Quantidade</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="HeaderTotal"><CanGrow>true</CanGrow><Style><FontWeight>Bold</FontWeight><BackgroundColor>#D9EDF7</BackgroundColor><Border><Style>Solid</Style><Color>Black</Color></Border><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>Total</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
              </TablixCells>
            </TablixRow>

            <!-- Detalhes -->
            <TablixRow>
              <Height>0.2in</Height>
              <TablixCells>
                <TablixCell><CellContents><Textbox Name="CustomerValue"><CanGrow>true</CanGrow><Style><Border><Style>Solid</Style><Color>Black</Color></Border><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor><TextAlign>Left</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!customer.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="OrderDateValue"><CanGrow>true</CanGrow><Style><Border><Style>Solid</Style><Color>Black</Color></Border><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor><TextAlign>Center</TextAlign><Format>yyyy-MM-dd HH:mm:ss</Format></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!order_date.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="ProductValue"><CanGrow>true</CanGrow><Style><Border><Style>Solid</Style><Color>Black</Color></Border><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor><TextAlign>Left</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!product.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="QuantityValue"><CanGrow>true</CanGrow><Style><Border><Style>Solid</Style><Color>Black</Color></Border><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor><TextAlign>Center</TextAlign></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!quantity.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
                <TablixCell><CellContents><Textbox Name="TotalItemValue"><CanGrow>true</CanGrow><Style><Border><Style>Solid</Style><Color>Black</Color></Border><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#F9F9F9", "White")</BackgroundColor><TextAlign>Center</TextAlign><Format>C2</Format></Style><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!total_item.Value</Value></TextRun></TextRuns></Paragraph></Paragraphs></Textbox></CellContents></TablixCell>
              </TablixCells>
            </TablixRow>
          </TablixRows>
        </TablixBody>

        <DataSetName>DataSet1</DataSetName>
        <TablixColumnHierarchy><TablixMembers><TablixMember /><TablixMember /><TablixMember /><TablixMember /><TablixMember /></TablixMembers></TablixColumnHierarchy>
        <TablixRowHierarchy><TablixMembers><TablixMember /><TablixMember><Group Name="DetailGroup" /></TablixMember></TablixMembers></TablixRowHierarchy>

        <Top>0.2in</Top>
        <Left>0.2in</Left>
        <Height>0.6in</Height>
        <Width>8in</Width>
        <NoRowsMessage>Nenhum pedido encontrado.</NoRowsMessage>
      </Tablix>
    </ReportItems>
    <Height>2in</Height>
  </Body>

  <Width>8.5in</Width>
  <Page>
    <PageHeight>11in</PageHeight>
    <PageWidth>8.5in</PageWidth>
    <LeftMargin>0.5in</LeftMargin>
    <RightMargin>0.5in</RightMargin>
    <TopMargin>0.5in</TopMargin>
    <BottomMargin>0.5in</BottomMargin>
  </Page>
</Report>
